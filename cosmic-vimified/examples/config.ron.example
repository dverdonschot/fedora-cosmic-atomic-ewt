// COSMIC Vimified - Example Configuration
//
// Copy this file to: ~/.config/cosmic-vimified/config.ron
// Then customize to your preferences
//
// This is a RON (Rusty Object Notation) file
// Documentation: https://github.com/ron-rs/ron

(
    // Keybindings configuration
    keybindings: (
        // Activate hint mode (default: Super+g)
        activate: "Super+g",

        // Cancel hint mode (default: Escape)
        cancel: "Escape",

        // Vim-style scrolling when hints are active
        scroll_left: "h",
        scroll_down: "j",
        scroll_up: "k",
        scroll_right: "l",
    ),

    // Visual appearance configuration
    appearance: (
        // Hint background color (hex color)
        hint_bg_color: "#3daee9",

        // Hint text color (hex color)
        hint_text_color: "#ffffff",

        // Hint font size in points
        hint_font_size: 16,

        // Border radius in pixels (0 for square corners)
        hint_border_radius: 4,

        // Hint opacity (0.0 = transparent, 1.0 = opaque)
        hint_opacity: 0.95,

        // Border width in pixels
        hint_border_width: 2,

        // Border color (hex color)
        hint_border_color: "#2c3e50",
    ),

    // Keyboard layout configuration
    keyboard_layout: (
        // Layout mode:
        //   Standard - Home row: asdfjkl;
        //   LeftHanded - Left side: asdwerzxc
        //   RightHanded - Right side: jkluiopnm
        //   Custom - Custom character set
        mode: Standard,

        // Custom character set (only used if mode = Custom)
        // Example: Some("asdfghjkl")
        custom_chars: None,
    ),

    // Behavior configuration
    behavior: (
        // Scroll amount in pixels
        scroll_amount: 100,

        // Whether to move cursor to clicked element
        // (if false, clicks are synthesized without moving cursor)
        move_cursor: false,

        // Whether to return cursor to original position after click
        return_cursor: false,

        // Timeout in milliseconds before auto-hiding hints (0 = no timeout)
        hint_timeout: 0,
    ),

    // Multi-monitor configuration
    multi_monitor: (
        // Show hints on:
        //   Focused - Only the currently focused monitor
        //   All - All connected monitors
        //   Primary - Only the primary monitor
        mode: Focused,
    ),
)
